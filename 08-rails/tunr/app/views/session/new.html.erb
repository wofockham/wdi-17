<h1>Sign In</h1>

<%= form_tag login_path, :class => 'form-inline' do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :placeholder => 'littledouggie@gmail.com', :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>

  <%= submit_tag 'Log in', :class => 'btn btn-default' %>
<% end %>
